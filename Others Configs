# Compile Libtool
./configure --prefix=/usr
make
make check
make install

# Compile Glib
./configure --prefix=/usr --with-pcre=system && make
make install

# Compile  GTk+
./configure --prefix=/usr --sysconfdir=/etc --enable-broadway-backend --enable-x11-backend --disable-wayland-backend &&
make
make install

# Intall Firefox
tar -jxvf  firefox.tar.bz2 -C /opt/
mv /opt/firefox*/ /opt/firefox
ln -sf /opt/firefox/firefox /usr/bin/firefox

# Set Netwok on boot
cd /etc/sysconfig/
cat > ifconfig.eth0 << "EOF"
ONBOOT=yes
IFACE=eth0
SERVICE=ipv4-static
IP=192.168.1.2
GATEWAY=192.168.1.1
PREFIX=24
BROADCAST=192.168.1.255
EOF

# Create update-grub
vi /usr/sbin/update-grub

#!/bin/sh
set -e
exec grub-mkconfig -o /boot/grub/grub.cfg "$@"

sudo chown root:root /usr/sbin/update-grub
sudo chmod 755 /usr/sbin/update-grub
